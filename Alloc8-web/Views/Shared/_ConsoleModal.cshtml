<style>
    .console {
        color: #fff;
        border: 2px solid white;
        background-color: #000;
        padding: 1.5rem;
        border-radius: 0.5rem;
        font-family: monospace;
    }

    .console-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .status-indicators {
        display: flex;
        gap: 0.5rem;
        color: #ff0000; /* red */
    }

    .status-indicator {
        width: 0.75rem;
        height: 0.75rem;
        border-radius: 50%;
        color:white;
        cursor:pointer;
    }

    .status-red {
        background-color: #ff0000; /* red */
    }

    .status-yellow {
        background-color: #ffd700; /* yellow */
    }

    .status-green {
        background-color: #008000; /* green */
    }

    .language {
        font-size: 0.875rem;
    }

    .console-content {
        margin-top: 1rem;
    }

    .console-line {
        margin-bottom: 0.5rem;
    }

    .success-text {
        color: #00ff00 !important;
    }

    .text-yellow {
        color: #ffd700 !important; /* yellow */
    }

    .text-red {
        color: #ff0000 !important; /* red */
    }
    .blink {
      animation: blink-animation 1s step-start infinite;
    }

    @@keyframes blink-animation {
      20% {
        opacity: 0;
      },
      40%{
          opacity:1;
      },
      60%{
          opacity:1;
      },
      80%{
          opacity:1;
      },
      100% {
          opacity: 0;
      }

    }
</style>

<div class="modal-3 @RenderSection("modal_class", false)" id="consoleModel" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content console">
            <div class="console-header">
                
                <p class="language">Logs</p>
                <div class="status-indicators">
                    <div class="status-indicator status-red close"  data-dismiss="modal"></div>
                </div>
            </div>
            <div class="modal-body" >
                @RenderBody()
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@RenderSection("scripts", required: false)