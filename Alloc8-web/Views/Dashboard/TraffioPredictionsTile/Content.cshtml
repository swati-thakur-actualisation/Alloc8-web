@model List<Alloc8_web.ViewModels.Dashboard.TCPredictionsViewModel>
<div class="w-100 table-responsive">
        <table class="table table-hover mb-0">
            <thead class="thead-light">
                <tr>
                    <th class="border-top-0">Job Number</th>
                    <th class="border-top-0">Actual User</th>
                    <th class="border-top-0">Predicted User</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count > 0)
            {
                @foreach (var data in Model)
                {
                    <tr>
                        <td><strong>@data.jobNumber</strong></td>
                        <td>@data.actualDriver</td>
                        <td>

                        @if(data.predictedDriver != data.actualDriver)
                        {
                            <span style="border:2px solid #684048;padding:4px;border-radius:10px;background-color:#321820;color:#eb9c90">@data.predictedDriver</span>

                        }
                        else
                        {
                            <span style="border:2px solid #105e1a;padding:4px;border-radius:10px;background-color:#0e2717;color:#17d41d">@data.predictedDriver</span>

                        }
                        </td>
                        
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" style="text-align:center">No record found!</td>
                </tr>
            }
                
            </tbody>
        </table> 
</div>