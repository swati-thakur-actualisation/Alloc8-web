@model Alloc8_web.Utilities.Tile
<div class="col-12" id="recentLoginTileDiv">
    <div class="card">
        <div class="card-body mb-0">
            <div class="row">
                <div class="col-8 align-self-center">
                    <div class="">
                        <h4 class="mt-0 header-title">@Model.title</h4>
                    </div>
                </div><!--end col-->

            </div><!--end row-->
        </div><!--end card-body-->
        <div class="card-body overflow-hidden p-0" style="height:350px">
            <div class="d-flex mb-0 h-100 dash-info-box" id="recentLogins">
            </div>
        </div><!--end card-body-->
    </div><!--end card-->
</div><!--end col-->
    <script>
        $(document).ready(function () {

        $.ajax({
            url: "/Dashboard/GetRecentLogins?organisation=@Model.organisation",
            type: "GET",
            dataType: "html",
            beforeSend: function () {
                loader.add($("#recentLogins"))
            },
            success: function (data) {
                $("#recentLogins").html(data);
            },
            error: function (error) {
                loader.remove($("#recentLogins"))
                console.error("Error occurred: " + error.statusText);
            },
            complete: function () {
                loader.remove($("#recentLogins"))
            }
        });
        });
    </script>
