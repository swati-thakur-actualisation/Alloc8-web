<script>
    $(document).ready(function() {


        var defaultOrganisationId = '@defaultOrgId'; // This is a string
        var selectedOrgId = parseInt(defaultOrganisationId, 10);
        if (isNaN(selectedOrgId) || selectedOrgId <= 0) {
            selectedOrgId = 3; // Fallback to 3 if defaultOrgId is not a valid, positive number
        }

        // Function to load data based on the selected organisation ID
        function loadData(organisationId) {
            $.ajax({
                url: "/Dashboard/getService?organisation=" + organisationId,
                type: "GET",
                dataType: "html",
                beforeSend: function () {
                    loader.add($("#serviceStatus").parent().parent());
                },
                success: function (data) {
                    $("#serviceStatus").html(data);
                },
                error: function (error) {
                    console.error("Error occurred: " + error.statusText);
                },
                complete: function () {
                    loader.remove($("#serviceStatus").parent().parent());
                }
            });
        }

        // Load initial data
        loadData(selectedOrgId);

        // Set up event handler for changes in the dropdown
        $("select[name='orginationId']").change(function () {
            var selectedOrganisation = $(this).val();
            loadData(selectedOrganisation);
        });
    });


</script>