@model Alloc8_web.Utilities.Tile
<div style="width:100%;">
    <div class="table-responsive" style="overflow-y: auto;height:330px;">
    <table class="table table-hover mb-0">
        <thead class="thead-light" style="position: sticky; top: 0; z-index: 1;">
            <tr>
                <th class="border-top-0 text-left">Description</th>
                <th class="border-top-0 text-right" style="padding-right: 30px;">Status</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.subTiles != null && Model.subTiles.Count >0)
            {
                foreach(var tile in Model.subTiles)
                {
                    <tr>
                        <td class="text-left"><strong>@tile.title</strong></td>
                        @if (tile.show)
                        {
                            <td class="text-right">
                                <a href="javascript:" class="btn btn-success btn-sm mb-3" data-url="/Dashboard/activeTile" data-modal="algorithms_active" role="button">Active</a>

                            </td>
                        }
                        else
                        {
                            <td class="text-right"><a href="javascript:" class="btn btn-primary btn-sm mb-3" data-url="/Dashboard/upgradeTile" data-modal="algorithms_upgrade" role="button">Upgrade</a></td>
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
   
</div>
<div style="margin-top: 30px; text-align: center;">
    <p>This tile shows data which is not accurate and is for display purpose only</p>
</div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            window['algorithms_active_modal_callback'] = function algorithms_active_modal_callback() {
                window.location.href = '/Home/Index';
            }
            window['algorithms_upgrade_modal_callback'] = function algorithms_upgrade_modal_callback() {
                window.location.href = '/Home/Index';
            }
        });
        </script>
}