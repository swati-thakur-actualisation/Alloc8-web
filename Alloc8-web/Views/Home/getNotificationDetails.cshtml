@{
    ViewBag.Title = "Notification";
    Layout = "~/views/shared/_Modal.cshtml";
    ViewData["Title"] = "Notification";
}
@inject Alloc8_web.Utilities.Formatter.Formatter Formatter;
@section title{
    Notification
}
<div class="container">
    <div class="content" style="padding: 20px;">
        <table class="main" width="100%" cellpadding="0" cellspacing="0" style="border: 1px solid #313656;" bgcolor="#181b31">

            <tbody>
                <tr>
                    <td class="alert alert-primary border-0 bg-primary" style="padding: 20px; border-radius: 0;" align="center" valign="top">
                        <img src="~/assets/images/bell.png" alt="" style="margin-left: auto; margin-right: auto; display:block;width: 60px;">
                    </td>
                </tr>
                <tr>
                    <td class="alert alert-dark border-0" style="color:#d8c751; padding: 20px; border-radius: 0; background-color: #20233a;" align="center" valign="top">
                        Warning: Coaching sent for Michal
                    </td>
                </tr>
                <tr>
                    <td class="content-wrap" style="padding: 20px;" valign="top">
                        <table width="100%" cellpadding="0" cellspacing="0">
                            <tbody>
                                <tr>
                                    <td class="content-block" style="font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif; font-size: 14px; padding: 10px" valign="top">
                                        Michal has not completed his Break and was sent Coaching sms at @Formatter.time.human(DateTime.UtcNow.AddHours(-1))
                                    </td>
                                </tr>
                                
                               
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section warning {
    <h4 style="font-weight:100;text-align:center;color:#ffd700 ">This tile shows data which is not accurate and is for display purpose only</h4>

}
