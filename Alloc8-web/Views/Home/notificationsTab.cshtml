@{
    ViewBag.Title = "Notifications";
    Layout = "~/views/shared/_Modal.cshtml";
    ViewData["Title"] = "Notifications";
}
@inject Alloc8_web.Utilities.Formatter.Formatter Formatter;
@section title {
    Notifications
}


<div class="container">
    <div class="slimscroll notification-list" style="max-height:300px;overflow-y:scroll">
        <!-- item-->
        @for(int i = 0; i < 258; i++)
        {
            <a href="javascript:" style="position:relative" class="dropdown-item notify-item">

                <div class="notify-icon bg-danger"><i class="mdi mdi-message"></i></div>

                <p class="notify-details">New Message received<small class="text-muted">Coaching Sent at @Formatter.time.human(DateTime.UtcNow.AddMinutes(-(10+i)))</small></p>

                <!-- Add the following line for the date on the right side -->
                <h5 style="position:absolute;right:20px;top:10px;font-weight:100">@Formatter.time.human(DateTime.UtcNow.AddMinutes(-i))</h5>

            </a>

        }
    </div>
</div>
@section warning{
    <h4 style="font-weight:100;text-align:center;color:#ffd700 ">This tile shows data which is not accurate and is for display purpose only</h4>

}
