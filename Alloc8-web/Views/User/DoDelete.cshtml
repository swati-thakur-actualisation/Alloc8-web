@model Alloc8_web.ViewModels.User.UserDeleteViewModel;
@{
    ViewBag.Title = "Add User";
    Layout = "~/views/shared/_Modal.cshtml";
    ViewData["Title"] = "Add User";
}
<div class="container">
    <form action="/User/Delete" method="POST">
        <div class="test_form">
            <h3 style="
              position: absolute;
              top: -40px;
              left: 30px;">
                Delete
            </h3>
            <h5>Are you sure you want to delete @Model.email ?</h5>
            <input type="hidden" name="userId" value="@Model.userId" />
        </div>
    </form>
</div>
@section buttons{
    <button type="button" class="btn btn-success btn-sm mr-1" data-submit="modal">Delete</button>
    <button type="button" class="btn btn-danger btn-sm mr-1" data-dismiss="modal">Cancel</button>
}