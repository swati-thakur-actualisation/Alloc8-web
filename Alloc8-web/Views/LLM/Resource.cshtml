@using Alloc8_web.ViewModels.ChatGpt;
@model object

@if (Model is List<Dictionary<string, object>> resultData)
{
    <div class="container">
<div class="row">
    <div class="col-12">
   <div class="table-responsive" >
    <table class="table table-hover mb-0 text-center" style="overflow-y: auto;">
        <thead class="thead-light" style="position: sticky; top: 0; z-index: 1;">
            <tr>
                @foreach (var column in resultData.First())
                {
                    <th>@column.Key</th>
                }
            </tr>
        </thead>
        <tbody style="background-color: #181b2e;">
            @foreach (var row in resultData)
            {
                <tr>
                    @foreach (var column in row)
                    {
                        <td style="color:white;">@column.Value</td>
                    }
                </tr>
            }
        </tbody>
    </table>
    </div>
    </div>
    </div>
    </div>

}
else if (Model is ResourceErrorViewModel sqlErrorModel)
{
    <div class="alert alert-danger" role="alert">
        <strong>Error @sqlErrorModel.StatusCode:</strong> @sqlErrorModel.Message
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> An unexpected error occurred.
    </div>
}
